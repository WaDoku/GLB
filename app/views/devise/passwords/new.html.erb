<% content_for :content do %>
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "well", :method => :post}) do |f| %>
        <fieldset>
          <legend><%= t('.forgot_your_password', :default => 'Forgot your password?') %></legend>
          <%= devise_error_messages! %>
          <%= f.email_field :email, :autofocus => true, :class => "input-large" %>
          <div><%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions") %></div>
        </fieldset>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
