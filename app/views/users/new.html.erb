<% content_for :content do %>
  <div class="row">
    <div class="span5 offset1">
      <%= form_for @user do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <h1>Mitarbeiter anlegen</h1>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        <%= f.label :role, 'Status' %>
        <%= f.select(:role, options_for_select([['Admin', 'admin'],['Editor','editor'], ['Author','author'],['Commentator', 'commentator']], "editor")) %>
        <%= f.submit "Speichern", class: "btn" %>
        <%= link_to 'ZurÃ¼ck', users_path, class: "btn"  %>
      <% end %>
    </div>
  </div>
<% end %>
